{
  "env": {
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "no-var": ["error"],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "indent": "off",
    "no-unused-vars": ["warn", {"args": "all", "argsIgnorePattern": "^_"}],
    "no-use-before-define": [
      "error",
      {"functions": false, "classes": false, "variables": true}
    ]
  }
}
